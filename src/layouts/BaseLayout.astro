---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Astro" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-base-200">
    <slot>
      <!-- Hero section -->
      <div class="relative bg-base-300">
        <!-- Decorative image and overlay -->
        <div aria-hidden="true" class="absolute inset-0 overflow-hidden">
          <img src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-01-hero-full-width.jpg" alt="" class="size-full object-cover" />
        </div>
        <div aria-hidden="true" class="absolute inset-0 bg-base-300 opacity-50"></div>

        <div class="relative mx-auto flex max-w-3xl flex-col items-center px-6 py-32 text-center sm:py-64 lg:px-0">
          <h1 class="text-4xl font-bold tracking-tight text-base-content lg:text-6xl">New arrivals are here</h1>
          <p class="mt-4 text-xl text-base-content">The new arrivals have, well, newly arrived. Check out the latest options from our summer small-batch release while they're still in stock.</p>
          <a href="#" class="btn btn-primary mt-8">Shop New Arrivals</a>
        </div>
      </div>

      <main>
        <!-- Category section -->
        <section aria-labelledby="category-heading" class="pt-24 sm:pt-32 xl:mx-auto xl:max-w-7xl xl:px-8">
          <div class="px-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8 xl:px-0">
            <h2 id="category-heading" class="text-2xl font-bold tracking-tight text-base-content">Shop by Category</h2>
            <a href="#" class="hidden text-sm font-semibold text-primary hover:text-primary/80 sm:block">
              Browse all categories
              <span aria-hidden="true"> &rarr;</span>
            </a>
          </div>

          <div class="mt-4 flow-root">
            <div class="-my-2">
              <div class="relative box-content h-80 overflow-x-auto py-2 xl:overflow-visible">
                <div class="absolute flex space-x-8 px-4 sm:px-6 lg:px-8 xl:relative xl:grid xl:grid-cols-5 xl:gap-x-8 xl:space-x-0 xl:px-0">
                  <a href="#" class="card card-compact relative flex h-80 w-56 flex-col overflow-hidden hover:opacity-75 xl:w-auto">
                    <span aria-hidden="true" class="absolute inset-0">
                      <img src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-01-category-01.jpg" alt="" class="size-full object-cover" />
                    </span>
                    <span aria-hidden="true" class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-base-300 opacity-50"></span>
                    <span class="relative mt-auto text-center text-xl font-bold text-base-content">New Arrivals</span>
                  </a>
                  <a href="#" class="card card-compact relative flex h-80 w-56 flex-col overflow-hidden hover:opacity-75 xl:w-auto">
                    <span aria-hidden="true" class="absolute inset-0">
                      <img src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-01-category-02.jpg" alt="" class="size-full object-cover" />
                    </span>
                    <span aria-hidden="true" class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-base-300 opacity-50"></span>
                    <span class="relative mt-auto text-center text-xl font-bold text-base-content">Productivity</span>
                  </a>
                  <a href="#" class="card card-compact relative flex h-80 w-56 flex-col overflow-hidden hover:opacity-75 xl:w-auto">
                    <span aria-hidden="true" class="absolute inset-0">
                      <img src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-01-category-04.jpg" alt="" class="size-full object-cover" />
                    </span>
                    <span aria-hidden="true" class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-base-300 opacity-50"></span>
                    <span class="relative mt-auto text-center text-xl font-bold text-base-content">Workspace</span>
                  </a>
                  <a href="#" class="card card-compact relative flex h-80 w-56 flex-col overflow-hidden hover:opacity-75 xl:w-auto">
                    <span aria-hidden="true" class="absolute inset-0">
                      <img src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-01-category-05.jpg" alt="" class="size-full object-cover" />
                    </span>
                    <span aria-hidden="true" class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-base-300 opacity-50"></span>
                    <span class="relative mt-auto text-center text-xl font-bold text-base-content">Accessories</span>
                  </a>
                  <a href="#" class="card card-compact relative flex h-80 w-56 flex-col overflow-hidden hover:opacity-75 xl:w-auto">
                    <span aria-hidden="true" class="absolute inset-0">
                      <img src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-01-category-03.jpg" alt="" class="size-full object-cover" />
                    </span>
                    <span aria-hidden="true" class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-base-300 opacity-50"></span>
                    <span class="relative mt-auto text-center text-xl font-bold text-base-content">Sale</span>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-6 px-4 sm:hidden">
            <a href="#" class="block text-sm font-semibold text-primary hover:text-primary/80">
              Browse all categories
              <span aria-hidden="true"> &rarr;</span>
            </a>
          </div>
        </section>

        <!-- Featured section -->
        <section aria-labelledby="social-impact-heading" class="mx-auto max-w-7xl px-4 pt-24 sm:px-6 sm:pt-32 lg:px-8">
          <div class="card image-full relative overflow-hidden">
            <figure>
              <img src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-01-feature-section-01.jpg" alt="" class="size-full object-cover" />
            </figure>
            <div class="card-body bg-base-300/75 px-6 py-32 sm:px-12 sm:py-40 lg:px-16">
              <div class="relative mx-auto flex max-w-3xl flex-col items-center text-center">
                <h2 id="social-impact-heading" class="card-title text-3xl font-bold tracking-tight text-base-content sm:text-4xl">
                  <span class="block sm:inline">Level up</span>
                  <span class="block sm:inline">your desk</span>
                </h2>
                <p class="mt-3 text-xl text-base-content">Make your desk beautiful and organized. Post a picture to social media and watch it get more likes than life-changing announcements. Reflect on the shallow nature of existence. At least you have a really nice desk setup.</p>
                <div class="card-actions mt-8">
                  <a href="#" class="btn btn-primary w-full sm:w-auto">Shop Workspace</a>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Collection section -->
        <section aria-labelledby="collection-heading" class="mx-auto max-w-xl px-4 pt-24 sm:px-6 sm:pt-32 lg:max-w-7xl lg:px-8">
          <h2 id="collection-heading" class="text-2xl font-bold tracking-tight text-base-content">Shop by Collection</h2>
          <p class="mt-4 text-base text-base-content/70">Each season, we collaborate with world-class designers to create a collection inspired by the natural world.</p>

          <div class="mt-10 space-y-12 lg:grid lg:grid-cols-3 lg:space-y-0 lg:gap-x-8">
            <a href="#" class="card card-compact group">
              <figure>
                <img src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-01-collection-01.jpg" alt="Brown leather key ring with brass metal loops and rivets on wood table." class="aspect-3/2 w-full rounded-lg object-cover group-hover:opacity-75 lg:aspect-5/6" />
              </figure>
              <div class="card-body">
                <h3 class="card-title text-base">Handcrafted Collection</h3>
                <p class="text-sm text-base-content/70">Keep your phone, keys, and wallet together, so you can lose everything at once.</p>
              </div>
            </a>
            <a href="#" class="card card-compact group">
              <figure>
                <img src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-01-collection-02.jpg" alt="Natural leather mouse pad on white desk next to porcelain mug and keyboard." class="aspect-3/2 w-full rounded-lg object-cover group-hover:opacity-75 lg:aspect-5/6" />
              </figure>
              <div class="card-body">
                <h3 class="card-title text-base">Organized Desk Collection</h3>
                <p class="text-sm text-base-content/70">The rest of the house will still be a mess, but your desk will look great.</p>
              </div>
            </a>
            <a href="#" class="card card-compact group">
              <figure>
                <img src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-01-collection-03.jpg" alt="Person placing task list card into walnut card holder next to felt carrying case on leather desk pad." class="aspect-3/2 w-full rounded-lg object-cover group-hover:opacity-75 lg:aspect-5/6" />
              </figure>
              <div class="card-body">
                <h3 class="card-title text-base">Focus Collection</h3>
                <p class="text-sm text-base-content/70">Be more productive than enterprise project managers with a single piece of paper.</p>
              </div>
            </a>
          </div>
        </section>

        <!-- Featured section -->
        <section aria-labelledby="comfort-heading" class="mx-auto max-w-7xl px-4 py-24 sm:px-6 sm:py-32 lg:px-8">
          <div class="card image-full relative overflow-hidden">
            <figure>
              <img src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-01-feature-section-02.jpg" alt="" class="size-full object-cover" />
            </figure>
            <div class="card-body bg-base-300/75 px-6 py-32 sm:px-12 sm:py-40 lg:px-16">
              <div class="relative mx-auto flex max-w-3xl flex-col items-center text-center">
                <h2 id="comfort-heading" class="card-title text-3xl font-bold tracking-tight text-base-content sm:text-4xl">Simple productivity</h2>
                <p class="mt-3 text-xl text-base-content">Endless tasks, limited hours, a single piece of paper. Not really a haiku, but we're doing our best here. No kanban boards, burndown charts, or tangled flowcharts with our Focus system. Just the undeniable urge to fill empty circles.</p>
                <div class="card-actions mt-8">
                  <a href="#" class="btn btn-primary w-full sm:w-auto">Shop Focus</a>
                </div>
              </div>
            </div>
          </div>
        </section>
      </main>

      <footer aria-labelledby="footer-heading" class="bg-base-300">
        <h2 id="footer-heading" class="sr-only">Footer</h2>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="py-20 xl:grid xl:grid-cols-3 xl:gap-8">
            <div class="grid grid-cols-2 gap-8 xl:col-span-2">
              <div class="space-y-12 md:grid md:grid-cols-2 md:gap-8 md:space-y-0">
                <div>
                  <h3 class="text-sm font-medium text-base-content">Shop</h3>
                  <ul role="list" class="menu mt-6 space-y-6">
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Bags</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Tees</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Objects</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Home Goods</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Accessories</a>
                    </li>
                  </ul>
                </div>
                <div>
                  <h3 class="text-sm font-medium text-base-content">Company</h3>
                  <ul role="list" class="menu mt-6 space-y-6">
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Who we are</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Sustainability</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Press</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Careers</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Terms &amp; Conditions</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Privacy</a>
                    </li>
                  </ul>
                </div>
              </div>
              <div class="space-y-12 md:grid md:grid-cols-2 md:gap-8 md:space-y-0">
                <div>
                  <h3 class="text-sm font-medium text-base-content">Account</h3>
                  <ul role="list" class="menu mt-6 space-y-6">
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Manage Account</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Returns &amp; Exchanges</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Redeem a Gift Card</a>
                    </li>
                  </ul>
                </div>
                <div>
                  <h3 class="text-sm font-medium text-base-content">Connect</h3>
                  <ul role="list" class="menu mt-6 space-y-6">
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Contact Us</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Facebook</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Instagram</a>
                    </li>
                    <li class="text-sm">
                      <a href="#" class="text-base-content/70 hover:text-base-content">Pinterest</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="mt-12 md:mt-16 xl:mt-0">
              <h3 class="text-sm font-medium text-base-content">Sign up for our newsletter</h3>
              <p class="mt-6 text-sm text-base-content/70">The latest deals and savings, sent to your inbox weekly.</p>
              <form class="mt-2 flex sm:max-w-md">
                <input id="email-address" type="text" required autocomplete="email" aria-label="Email address" placeholder="Email address" class="input input-bordered flex-1" />
                <div class="ml-4 shrink-0">
                  <button type="submit" class="btn btn-primary">Sign up</button>
                </div>
              </form>
            </div>
          </div>

          <div class="border-t border-base-content/20 py-10">
            <p class="text-sm text-base-content/60">Copyright &copy; 2021 Your Company, Inc.</p>
          </div>
        </div>
      </footer>
    </slot>
  </body>
</html>
