---
import { ArrowUpRight } from '../icons/ArrowUpRight';
import { Plus } from '../icons/Plus';

interface Props {
  href: string;
  image: string;
  title: string;
  price: string;
  hasMultipleVariants: boolean;
}

const { href, image, title, price, hasMultipleVariants } = Astro.props;
---

<a href={href} class="group block w-full min-w-0 bg-base-200">
  <figure class="relative aspect-[4/5]">
    <img
      src={image}
      alt={title}
      class="h-full w-full object-cover rounded-box"
    />
    <div
      class="absolute inset-0 bg-base-100 opacity-0 transition-opacity duration-300 group-hover:opacity-20 rounded-box"
      aria-hidden="true"
    />
  </figure>
  <div class="flex items-end justify-between gap-4 bg-base-200 py-4">
    <div class="min-w-0 flex-1">
      <h3 class="truncate text-xs font-bold tracking-wide uppercase text-base-content sm:text-base">
        {title}
      </h3>
      {price && (
        <p class="text-sm text-base-content opacity-70">{price}</p>
      )}
    </div>
    <span
      class="btn btn-circle btn-primary btn-sm shrink-0 text-base-content"
      aria-hidden="true"
    >
      {hasMultipleVariants ? (
        <ArrowUpRight className="size-4" />
      ) : (
        <Plus className="size-4" />
      )}
    </span>
  </div>
</a>
