---
import { ArrowUpRight } from './icons/ArrowUpRight';

interface Props {
  href: string;
  image: string;
  title: string;
  description: string;
}

const { href, image, title, description } = Astro.props;
---

<a href={href} class="card card-compact group">
  <figure class="relative overflow-hidden">
    <img src={image} alt={title} class="aspect-[4/3] w-full object-cover lg:aspect-[6/5]" />
    <div
      class="absolute inset-0 bg-base-100 opacity-0 transition-opacity duration-300 group-hover:opacity-20"
      aria-hidden="true"
    />
  </figure>
  <div class="card-body flex-row items-end justify-between gap-4 px-0">
    <div class="min-w-0 flex-1">
      <h3 class="card-title uppercase">{title}</h3>
      <p class="opacity-70" set:html={description}></p>
    </div>
    <span
      class="btn btn-circle btn-primary btn-sm shrink-0 text-base-content"
      aria-hidden="true"
    >
      <ArrowUpRight className="size-4" />
    </span>
  </div>
</a>
