---
interface Props {
  href: string;
  image: string;
  title: string;
  description: string;
}

const { href, image, title, description } = Astro.props;
---

<a href={href} class="card card-compact group">
  <figure>
    <img src={image} alt={title} class="aspect-3/2 w-full object-cover group-hover:opacity-75 lg:aspect-5/6" />
  </figure>
  <div class="card-body">
    <h3 class="card-title">{title}</h3>
    <p class="opacity-70">{description}</p>
  </div>
</a>
